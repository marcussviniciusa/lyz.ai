# MongoDB
MONGODB_URI=mongodb://localhost:27017/lyz-ai

# NextAuth
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-secret-key-here

# APIs de IA
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key
GOOGLE_API_KEY=your-google-api-key

# Google Cloud Vision API (escolha uma das opções abaixo)
# Opção 1: Arquivo de credenciais JSON
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account-key.json

# Opção 2: Credenciais diretas (para ambientes como Vercel)
GOOGLE_CLOUD_PROJECT_ID=your-project-id
GOOGLE_CLOUD_CLIENT_EMAIL=your-service-account@project.iam.gserviceaccount.com
GOOGLE_CLOUD_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----"

# MinIO (Armazenamento de Arquivos)
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_USE_SSL=false
MINIO_BUCKET_NAME=lyz-ai-files

# Configurações do Sistema
NODE_ENV=development
APP_URL=http://localhost:3000

# Configurações de Upload
MAX_FILE_SIZE=50MB
ALLOWED_FILE_TYPES=pdf,png,jpg,jpeg

# Configurações de IA
DEFAULT_AI_PROVIDER=openai
DEFAULT_MODEL=gpt-4o-mini
RAG_CHUNK_SIZE=1000
RAG_CHUNK_OVERLAP=200

# Integração com Curseduca
CURSEDUCA_API_URL=https://api.curseduca.com
CURSEDUCA_API_KEY=your-curseduca-api-key

# Other Services
SMTP_HOST=your-smtp-host
SMTP_PORT=587
SMTP_USER=your-email@domain.com
SMTP_PASS=your-email-password 